<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:scrollbars = "vertical"
    android:scrollbarStyle="insideInset"
    android:id="@+id/Fragmentb"
    >




    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
       >


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="300dp"
            android:weightSum="2"
            >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">


                <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView"


                    />

            </FrameLayout>



            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:paddingTop="35dp"
                android:paddingLeft="20dp"
                android:layout_height="match_parent"
                android:layout_weight="1">


                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Movie Name "
                android:id="@+id/movieTitle"

                android:layout_alignRight="@+id/releaseDate"
                android:layout_alignEnd="@+id/releaseDate" />

                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=" Medium Text"
                android:id="@+id/movieTitleText"
                android:layout_below="@+id/movieTitle"
                android:layout_alignLeft="@+id/movieTitle"
                android:layout_alignStart="@+id/movieTitle" />

                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Release Date "
                android:id="@+id/releaseDate"
                android:layout_below="@+id/movieTitleText"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=" Medium Text"
                android:id="@+id/releaseDateText"
                android:layout_below="@+id/releaseDate"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Vote Average "
                    android:id="@+id/voteAverage"
                    android:layout_below="@+id/overviewText"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=" Medium Text"
                android:id="@+id/voteAverageText"
                android:layout_below="@+id/voteAverage"
                android:layout_alignLeft="@+id/overviewText"
                android:layout_alignStart="@+id/overviewText" />


            </LinearLayout>




        </LinearLayout>



        <View
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                 android:paddingTop="20dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="# Add to favourite"
                android:id="@+id/FavouriteText"

                 />

            <ToggleButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="New ToggleButton"
                android:background="@drawable/star"
                android:textOn=""
                android:textOff=""
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:paddingTop="12dp"
                android:layout_centerVertical="true"
                android:id="@+id/toggleButton"
                android:checked="false" />
        </LinearLayout>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Movie Overview"
        android:id="@+id/overview"
        android:layout_below="@+id/releaseDateText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/overviewText"
        android:layout_below="@+id/overview"
        android:layout_alignLeft="@+id/movieTitleText"
        android:layout_alignStart="@+id/movieTitleText" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="15dp"
            />

        <View
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:background="#c0c0c0"/>



        <LinearLayout
            android:id="@+id/ImageButtonLayout"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/TextLayout"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

        </LinearLayout>


    </LinearLayout>
</ScrollView>